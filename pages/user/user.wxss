Page{
    background: #f7f7f7;
}
.user-center{
  width: 100%;
}
.user-center__message{
  width: auto;
  height: 200rpx;
  padding: 30rpx;
}

.user-center__head{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: block;
  float: left;
}

.user-center__username{
  height: 140rpx;
  line-height: 140rpx;
  margin-left: 26px;
  display: block;
  float: left;
  color: #fff;
}

.user-center__order{
  width: 100%;
  height: auto;
}

.user-center__order .zan-panel{
  margin-top: 0;
}

.user-center__myorder{
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
}

.user-center__order__list{
  width: 100%;
  height: 140rpx;
  text-align: center;
  background: #fff;
  margin-top: 8rpx;
  padding: 20rpx;
}

.user-center__order__list image{
  width: 56rpx;
  height: 56rpx;
}

.user-center__order__list .user-center__order__text{
  font-size: 26rpx;
}

.user-center__list{
  width: 100%;
  text-align: center;
  background: #fff;
  margin-top: 20rpx;
}

.user-center__list .zan-col-8{
  height: 210rpx;
}

.user-center__list .zan-col-8{
  border-top:1px solid #f5f5f5;
}

.user-center__list .zan-col-8 image{
  width: 68rpx;
  height: 68rpx;
  margin-top: 50rpx;
}

.user-center__list .zan-col-8 view{
  font-size: 26rpx;
  color: #333;
  height: 26rpx;
  line-height: 2;
}

.user-center__list .zan-col-8:nth-child(3n-1){
  border-left:1px solid #f5f5f5;
  border-right:1px solid #f5f5f5;
}