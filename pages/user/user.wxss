@import "../../common/base.wxss";
Page{
    background: #f7f7f7;
}
.present-zone{
    width: 74%;
    border-radius: 20rpx;
    border: 1rpx solid #bbbbbb;
    background: #fff;
    padding: 66rpx;
    font-size: 28rpx;
    text-align: center;
    position: relative;
}
.get-btn{
    font-size: 72rpx;
    color: #fff;
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    margin: 30rpx auto 0;
    background: #E51C23;
    border-radius: 50%;
}
.close-btn{
    position: absolute;
    z-index: 1;
    right: 7rpx;
    top: 7rpx;
    width: 48rpx;
    height: 48rpx;
}

.popup-example--center {
  border-radius: 4px;
}

.popup-example--right .zan-popup__container {
  top: 0;
  bottom: 0;
}

.popup-example--left .zan-popup__container {
  top: 0;
  bottom: 0;
}

.popup-example--top .zan-popup__container {
  left: 0;
  right: 0;
  padding: 15px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 16px;
}
.popup-example--top .zan-popup__mask {
  opacity: 0;
}

.popup-example--bottom .zan-popup__container {
  left: 0;
  right: 0;
}