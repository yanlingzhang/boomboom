@import "../../common/base.wxss";
Page{
    background: #f7f7f7;
}
.present-zone{
    width: 74%;
    border-radius: 20rpx;
    border: 1rpx solid #bbbbbb;
    background: #fff;
    padding: 66rpx;
    font-size: 28rpx;
    text-align: center;
    position: relative;
}
.get-btn{
    font-size: 72rpx;
    color: #fff;
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    margin: 30rpx auto 0;
    background: #E51C23;
    border-radius: 50%;
}
.close-btn{
    position: absolute;
    z-index: 1;
    right: 7rpx;
    top: 7rpx;
    width: 48rpx;
    height: 48rpx;
}
.banner-img{
    height: 320rpx;
    width: 100%;
}
.shop-list{
    padding: 30rpx 24rpx;
    background: #fff;
    height:240rpx;
    box-sizing: border-box;
    width: 100%;
    white-space: nowrap;
}
.shop-cell{
    width: 270rpx;
    display: inline-block;
    position: relative;
    margin-right: 24rpx;
}
.shop-cell image{
    width: 270rpx;
    height: 180rpx;
}
.title-cell{
    text-align: center;
    border-top: 10rpx solid #bbb;
    background: #fff;
    display:flex;
    justify-content:center;
    align-items:center;
}
.line{
    width: 40rpx;
    height: 1rpx;
    background: #bbbbbb;
}
.title-name{
    padding: 0 20rpx;
    font-size: 26rpx;
    color: #000000;
}
.brand-list{
    padding: 30rpx 24rpx;
    background: #fff;
    height:280rpx;
    box-sizing: border-box;
    width: 100%;
    white-space: nowrap;
}
.brand-cell{
    width: 270rpx;
    display: inline-block;
    position: relative;
    margin-right: 24rpx;
}
.brand-cell image{
    width: 270rpx;
    height: 180rpx;
}
.brand-cell text{
    display: block;
    text-align: center;
    color: #000;
    font-size:24rpx;
}
.shop-around-list{
    max-height: 600rpx;
    background: #fff;
}
.shop-around-cell{
    padding:30rpx 24rpx 15rpx;
    border-bottom: 2rpx solid #ccc;
}
.shop-logo{
    float: left;
    margin-right: 20rpx;
    max-width:120rpx;
    max-height: 120rpx;
}
.shop-detail{
    width: 550rpx;
    float: left;
    line-height: 1.5;
    position: relative;
    top:-15rpx;
}
.shop-name-zone,.shop-score-zone{
    position: relative;
}
.shop-name{
    font-size:28rpx;
    color: #111;
    display: -webkit-box;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
}
.shop-address{
    font-size:28rpx;
    color: #111;
}
.shop-discount{
    color: red;
    font-size: 24rpx;
}
.price{
    color: #000;
    font-size: 26rpx;
}
.sell-num{
    font-size: 24rpx;
    color: #bbbbbb;
    margin-left: 20rpx;
}
.buy-btn{
    float: right;
    border: 1rpx solid #bbbbbb;
    border-radius: 5rpx;
    font-size: 24rpx;
    padding: 5rpx;
}