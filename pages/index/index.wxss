@import "../../common/base.wxss";
Page{
    background: #f7f7f7;
}
.present-zone{
    width: 428rpx;
    border-radius: 20rpx;
    font-size: 30rpx;
    color: #fff9a9;
    text-align: center;
    position: relative;
}
.present-zone2{
    width: 581rpx;
    border-radius: 20rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    position: relative;
}
.present-name-zone{
    text-align: left;
    color:#e52845;
}
.present-num{
    margin-top: 10rpx;
}
.present-text-zone2{
    left: 50%;
    transform: translateX(-50%);
    z-index:10;
    top:260rpx;
    width: 100%;
    line-height: 40rpx;
    position: absolute;
}
.present-text-zone{
    left: 50%;
    transform: translateX(-50%);
    z-index:10;
    top:94rpx;
    width: 100%;
    line-height: 40rpx;
    position: absolute;
}
.present-open-btn{
    width: 233rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 10rpx;
    position: absolute;
    z-index:10;
    left: 50%;
    top:400rpx;
    transform: translateX(-50%);
    font-size:34rpx;
    color: #000;
    background:#f6e832;
}
.present-open-btn2{
    width: 233rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size:34rpx;
    color: #000;
    margin: 30rpx auto 0;
    background:#f6e832;
}
.present-list{
    margin-top: 40rpx;
}
.present-cell{
    margin: 0 auto 10rpx;
    width: 535rpx;
    padding: 25rpx 30rpx 0 30rpx;
    height: 132rpx;
    background: url('https://www.weiyoutong.cn/wyttest/Public/Home/images/boom/present_bg.png') no-repeat;
    background-size: 100% 100%;
}
.img-present{
    width: 80rpx;
    height: 80rpx;
}
.img-present-bg{
    width: 100%;
    height: 529rpx;
}
.img-present-bg2{
    width: 100%;
    height: 720rpx;
}
.img-open{
    width: 132rpx;
    height: 132rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index:10;
    top:98rpx;
    position: absolute;
}
.close-btn{
    position: absolute;
    z-index: 1;
    right: -32rpx;
    top: -72rpx;
    width: 64rpx;
    height: 64rpx;
}
.banner-img{
    height: 350rpx;
    width: 100%;
}
.shop-list{
    background: #fff;
    height:175rpx;
    box-sizing: border-box;
    width: 100%;
    border-top: 1px solid #f5f5f5;
    white-space: nowrap;
}
.shop-cell{
    width: 270rpx;
    height: 175rpx;
    display: inline-block;
    position: relative;
    border-right: 1px solid #f5f5f5;
}
.shop-cell image{
    width: 270rpx;
    height: 175rpx;
}
.title-cell{
    text-align: center;
    border-top: 20rpx solid #f5f5f5;
    background: #fff;
    display:flex;
    justify-content:center;
    align-items:center;
}
.line{
    width: 40rpx;
    height: 1rpx;
    background: #bbbbbb;
}
.brand-list{
    padding: 24rpx 12rpx 0 12rpx;
    background: #fff;
    height:224rpx;
    box-sizing: border-box;
    width: 100%;
    white-space: nowrap;
}
.brand-cell{
    width: 100rpx;
    display: inline-block;
    position: relative;
    padding: 0 23rpx;
    box-sizing: content-box;
}
.brand-cell image{
    width: 100rpx;
    height: 100rpx;
}
.brand-cell text{
    display: block;
    text-align: center;
    color: #666666;
    font-size:26rpx;
}
.recommend-cell:nth-child(2n){
    float: right;
}
.recommend-cell:nth-child(2n+1){
    float: left;
}
.recommend-cell{
    width: 372rpx;
    margin-bottom: 10rpx;
    background: #fff;
}
.product-img{
    max-width: 372rpx;
    max-height: 372rpx;
}
.product-info{
    padding: 20rpx;
}
.product-name{
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #333333;
    font-size:28rpx;
}
.product-price{
    color: #e52845;
    height: 36rpx;
    font-size:24rpx;
    line-height: 36rpx;
    font-weight: bold;
}
.price-text{
    font-size:30rpx;
}
.sell-num{
    color: #999999;
    font-size:22rpx;
    margin-top: 10rpx;
}
.recommend-price-zone{
    margin-top: 20rpx;
}
.product-coupon{
    color: #fff;
    text-align: center;
    width: 120rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size:22rpx;
    background: url('https://www.weiyoutong.cn/wyttest/Public/Home/images/boom/good_deduction.png') no-repeat;
    background-size: 100% 100%;
}
.header-img{
    width: 750rpx;
    height: 82rpx;
}