@import "../../common/base.wxss";
Page{
    background: #f7f7f7;
}
.present-zone{
    width: 74%;
    border-radius: 20rpx;
    border: 1rpx solid #bbbbbb;
    background: #fff;
    padding: 66rpx;
    font-size: 28rpx;
    text-align: center;
    position: relative;
}
.get-btn{
    font-size: 72rpx;
    color: #fff;
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    margin: 30rpx auto 0;
    background: #E51C23;
    border-radius: 50%;
}
.close-btn{
    position: absolute;
    z-index: 1;
    right: 7rpx;
    top: 7rpx;
    width: 48rpx;
    height: 48rpx;
}
.banner-img{
    height: 350rpx;
    width: 100%;
}
.shop-list{
    background: #fff;
    height:175rpx;
    box-sizing: border-box;
    width: 100%;
    border-top: 1px solid #f5f5f5;
    white-space: nowrap;
}
.shop-cell{
    width: 270rpx;
    height: 175rpx;
    display: inline-block;
    position: relative;
    border-right: 1px solid #f5f5f5;
}
.shop-cell image{
    width: 270rpx;
    height: 175rpx;
}
.title-cell{
    text-align: center;
    border-top: 20rpx solid #f5f5f5;
    background: #fff;
    display:flex;
    justify-content:center;
    align-items:center;
}
.line{
    width: 40rpx;
    height: 1rpx;
    background: #bbbbbb;
}
.brand-list{
    padding: 24rpx 12rpx 0 12rpx;
    background: #fff;
    height:224rpx;
    box-sizing: border-box;
    width: 100%;
    white-space: nowrap;
}
.brand-cell{
    width: 100rpx;
    display: inline-block;
    position: relative;
    padding: 0 23rpx;
    box-sizing: content-box;
}
.brand-cell image{
    width: 100rpx;
    height: 100rpx;
}
.brand-cell text{
    display: block;
    text-align: center;
    color: #666666;
    font-size:26rpx;
}
.recommend-cell:nth-child(2n){
    float: right;
}
.recommend-cell:nth-child(2n+1){
    float: left;
}
.recommend-cell{
    width: 372rpx;
    margin-bottom: 10rpx;
    background: #fff;
}
.product-img{
    max-width: 372rpx;
    max-height: 372rpx;
}
.product-info{
    padding: 20rpx;
}
.product-name{
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #333333;
    font-size:28rpx;
}
.product-price{
    color: #e52845;
    height: 36rpx;
    font-size:24rpx;
    line-height: 36rpx;
    font-weight: bold;
}
.price-text{
    font-size:30rpx;
}
.sell-num{
    color: #999999;
    font-size:22rpx;
    margin-top: 10rpx;
}
.recommend-price-zone{
    margin-top: 20rpx;
}
.product-coupon{
    color: #fff;
    text-align: center;
    width: 120rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size:22rpx;
    background: url('https://www.weiyoutong.cn/wyttest/Public/Home/images/boom/good_deduction.png') no-repeat;
    background-size: 100% 100%;
}
.header-img{
    width: 750rpx;
    height: 82rpx;
}