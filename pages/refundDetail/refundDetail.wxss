Page{
    background: #f7f7f7;
}

.refund-detail{
  padding-bottom: 120rpx;
}

.refund-detail__status{
  padding: 0 26rpx 0 64rpx;
  height: 200rpx;
}

.refund-detail__status__pay__desc{
  height: 200rpx;
}

.refund-detail__status .refund-detail__status__pay{
  font-size: 32rpx;
  color: #fff;
  line-height: 200rpx;
}

.refund-detail__status .refund-detail__status__pay__desc{
  font-size: 32rpx;
  color: #fff;
}

.refund-detail__status .refund-detail__status__pay__desc .zan-cell__text{
  color: #fff;
  font-size: 32rpx;
  line-height: 60rpx;
  height: 60rpx;
  margin-top:40rpx;
}

.refund-detail__status .refund-detail__status__pay__desc .zan-cell__desc{
  color: #fff;
  font-size: 26rpx;
  line-height: 1.5;
}

.refund-detail__status image{
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-top: 50rpx;
}

.refund-detail .zan-card__img{
  width: 150rpx;
  height: 150rpx;
}

.refund-detail .zan-card{
  background: #fcfcfc;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
}

.refund-detail .zan-card:last-child{
  border-bottom: none;
}

.refund-detail .zan-card .zan-card__thumb{
  width: 150rpx;
  height: 150rpx;
}

.refund-detail .zan-card__detail-row{
  font-size: 26rpx;
}

.refund-detail .zan-card__detail{
  margin-left: 175rpx;
}

.refund-detail__address{
  width: 100%;
  height: 160rpx;
  margin: 0 auto;
  padding: 25rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.refund-detail__address .refund-detail__address__user{
  font-size: 26rpx;
  color: #333;
  line-height: 60rpx;
  padding: 0 65rpx;
}

.refund-detail__address .refund-detail__address__mes{
  font-size: 24rpx;
  color: #777777;
  line-height: 50rpx;
  padding: 0 24rpx;
}

.refund-detail__address .refund-detail__address__icon{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.refund-detail__shop__mes{
  margin-bottom: 20rpx;
}

.refund-detail__price__mes .zan-panel{
  margin: 0 auto;
}

.refund-detail__price__mes .zan-panel .zan-cell{
  height: 60rpx;
  line-height: 60rpx;
}

.refund-detail__rules__mes{
  padding: 30rpx;
  font-size: 26rpx;
}

.refund-detail__set__btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 100%;
}