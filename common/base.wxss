.text-ellipsis {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.text-center {
    text-align: center;
}

.text-left{
  text-align: left;
}

.text-right{
  text-align: right;
}

.fn-hide {
    display: none;
}

.fn-left {
    float: left;
}

.fn-right {
    float: right;
}

.clearfix {
    overflow: hidden;
    _zoom: 1;
}
.fn-clear:after{display:block;clear:both;content:"";visibility:hidden;height:0}
.fn-clear{zoom:1}

.imgfull {
    width: 100%
}

.no-border {
    border: none !important;
}

.mask {
    position: fixed;
    z-index: 1000;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(16, 16, 16, 0.5);
}

.float-zone {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 10rpx;
}
.float-bottom-zone {
    position: absolute;
    bottom: 0;
    left: 0;
}

/* 主背景色调 */
.bg-main__color{
  background: #e52b46;
}

.position-fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
}